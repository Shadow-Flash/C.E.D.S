<!DOCTYPE html>
<html lang="en">
  <head>
    <title>SIGNUP</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <link href="assets/css/login-register.css" rel="stylesheet" />
    <link rel="stylesheet" href="assets/css/main.css" />
  </head>
  <body>
    <!-- <script src="../backend/functions/auth.js"></script> -->
    <div class="login-wrap">
      <div class="login-html">
        <h3>New Member</h3>
        <form
          action="signup"
          method="POST"
          class="sign-up-htm"
        >
          <div class="row mt-3">
            <div class="col">
              <input
                type="text"
                id="name"
                placeholder="Enter Name"
                name="name"
                required
                autofocus
                pattern="[a-zA-Z\s]+"
                title="Only Alphabets please"
                maxlength="30"
                minlength="5"
              />
            </div>
            <div class="col">
              <input
                type="text"
                id="mob"
                placeholder="Enter your mobile no."
                name="mobile"
                required
                pattern="[789][0-9]{9}"
                title="Only Numbers please"
                maxlength="10"
                minlength="10"
              />
            </div>
          </div>
          <div class="row mt-3">
            <div class="col">
              <input
                type="email"
                id="email"
                placeholder="Enter your Email"
                autocomplete="username"
                name="email"
                required
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
              />
            </div>
            <div class="col">
              <input
                type="password"
                id="pass"
                placeholder="Create your Password"
                autocomplete="current-password"
                name="password"
                minlength="6"
                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters"
                required
              />
            </div>
          </div>
          <div class="row mt-3">
            <div class="col">
              <input
                type="text"
                id="enroll"
                placeholder="Enter your Enrollment no."
                name="enroll"
                pattern="[0-9]{10}"
                title="Only Numbers please"
                maxlength="10"
                minlength="10"
                required
              />
            </div>
            <div class="col">
              <input
                type="text"
                id="adno"
                placeholder="Enter your Admission no."
                name="adno"
                pattern="([0-9]{2}[A-Za-z]{4})([0-9]{7}|[0-9]{6})"
                title="Only AlphaNumeric please"
                maxlength="13"
                minlength="12"
                required
              />
            </div>
          </div>
          <div class="row mt-3">
            <div class="col">
              <input
                type="text"
                id="year"
                placeholder="Enter your Year"
                name="year"
                required
                pattern="[1-5]{1}"
                maxlength="1"
                title="Year from 1 to 5"
              />
            </div>
            <div class="col">
              <input
                type="text"
                id="sem"
                placeholder="Enter your Semester"
                name="semester"
                pattern="[1-10]{1|2}"
                maxlength="2"
                minlength="1"
                required
              />
            </div>
          </div>
          <div class="row mt-3 mb-3">
            <div class="col">
              <input
                type="text"
                id="school"
                placeholder="Enter your School"
                name="school"
                pattern="[a-zA-Z]{4}"
                title="ex: SCSE"
                maxlength="4"
                minlength="4"
                required
              />
            </div>
            <div class="col">
              <input
                type="text"
                id="branch"
                placeholder="Enter your Branch"
                name="branch"
                pattern="[.a-zA-Z]{6}"
                title="ex: B.tech"
                maxlength="6"
                minlength="6"
                required
              />
            </div>
          </div>
          <div class="col">
            <input type="submit" class="button primary" value="Sign up" />
          </div>
          <div class="foot-lnk">
            <a class="button small" href="login">Already Member?</a>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
